    .container {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 77vh;
      /* background: linear-gradient(135deg, rgba(219, 234, 254, 0.8), rgba(227, 231, 249, 0.8)); */
    }
  
    .card {
      background: rgba(255, 255, 255, 0.4);
      border-radius: 12px;
      border: 1px solid rgba(255, 255, 255, 0.2);
      box-shadow: 8px 8px 16px rgba(55, 84, 170, 0.1);
      backdrop-filter: blur(12px);
      padding: 20px;
      width: 250px;
      max-width: 50%;
    }
  
    .card-body {
      display: flex;
      flex-direction: column;
      align-items: center;
    }
  
    .card-body h1 {
      margin-bottom: 30px;
      color: rgba(0, 0, 0, 0.8);
      font-size: 28px;
      text-align: center;
      text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
    }
  
    .form-label {
      color: rgba(0, 0, 0, 0.7);
    }
  
    .form-control {
      border: 1px solid rgba(0, 0, 0, 0.2);
      border-radius: 8px;
      padding: 8px;
      margin-bottom: 12px;
      width: 100%;
      box-shadow: inset 2px 2px 4px rgba(0, 0, 0, 0.1);
    }
  
    .btn-primary {
      background-color: rgba(55, 84, 170, 0.8);
      border: none;
      border-radius: 8px;
      padding: 10px 16px;
      color: #fff;
      font-weight: 600;
      box-shadow: 4px 4px 8px rgba(55, 84, 170, 0.2);
      transition: background-color 0.3s ease;
    }
  
    .btn-primary:hover {
      background-color: rgba(55, 84, 170, 1);
    }
  
    p {
      text-align: center;
      margin-top: 16px;
      color: rgba(0, 0, 0, 0.6);
    }
  
    a {
      color: rgba(55, 84, 170, 0.8);
      text-decoration: none;
    }
  </style>
</head>
<body >
  
  <% if (message) { %>
    <p><%= message %></p>
  <% } %>
  
